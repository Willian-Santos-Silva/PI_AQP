<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="PI_AQP.Views.General.PopupLoadingSpinner"
               Color="Transparent">
    <StackLayout BackgroundColor="Transparent">
        <Frame CornerRadius="8" Padding="32,16" BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgrounDark} }">
            <StackLayout >
                <ActivityIndicator IsRunning="True" Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource SecondaryDark} }" />
                <Label 
                    Text="Carregando"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"
                    Margin="0,16,0,0"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</toolkit:Popup>
